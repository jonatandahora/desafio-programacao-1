<p id="notice"><%= notice %></p>


<div class="panel panel-default">
  <div class="panel-heading" style="text-align: center">
    <h3 class="panel-title">Upload new Sales</h3>
  </div>
  <div class="panel-body" style="text-align: center">
    <%= form_tag("/sales/upload", multipart: true, class: "form-inline") do %>
    <%= file_field_tag('file', style: "display: inline") %>
    <%= submit_tag("Upload File", class: "btn") %>
    <% end %>
  </div>
</div>

<div class="alert alert-success" role="alert" style="text-align: center">
  <h3>Gross Revenue: <%= number_to_currency_br(@gross_revenue) %></h3>
</div>

<h1>Sales</h1>

<table class="table">
  <thead>
    <tr>
      <th>Purchaser name</th>
      <th>Item description</th>
      <th>Item price</th>
      <th>Purchase count</th>
      <th>Sale total</th>
      <th>Merchant address</th>
      <th>Merchant name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.purchaser_name %></td>
        <td><%= sale.item_description %></td>
        <td><%= number_to_currency_br(sale.item_price) %></td>
        <td><%= sale.purchase_count %></td>
        <td><%= number_to_currency_br(sale.sale_total) %></td>
        <td><%= sale.merchant_address %></td>
        <td><%= sale.merchant_name %></td>
        <td><%= link_to 'Show', sale %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @sales%>
